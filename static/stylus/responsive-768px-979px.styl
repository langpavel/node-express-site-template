//
// Responsive: Tablet to desktop
// --------------------------------------------------


@media (min-width: 768px) and (max-width: 979px) {

  // Fixed grid
  gridSystem-generate($gridColumns, $gridColumnWidth768, $gridGutterWidth768)

  // Fluid grid
  fluidGridSystem-generate($gridColumns, $fluidGridColumnWidth768, $fluidGridGutterWidth768)

  // Input grid
  inputGridSystem-generate($gridColumns, $gridColumnWidth768, $gridGutterWidth768)

  // No need to reset .thumbnails here since it's the same @gridGutterWidth

}
